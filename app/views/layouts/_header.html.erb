<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("header.app_name"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("header.home"), root_path %></li>
        <li><%= link_to t("header.products"), "#" %></li>
          <li>
            <%= link_to "#", class: "header-cart" do %>
              <i class="svg-button-cart"></i>
              <span class="cart-count"></span>
            <% end %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t("header_page.account") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("header.profile"), "#" %></li>
              <li><%= link_to t("header.settings"), "#" %></li>
              <li class="divider"></li>
              <li><%= link_to t("header.logout"), "#",
                method: :delete %></li>
            </ul>
          </li>
          <li><%= link_to t("header.login"), login_path %></li>
      </ul>
    </nav>
  </div>
</header>
