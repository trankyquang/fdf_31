<%= provide :title, @user.user_name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= image_tag @user.avatar, alt: t("alt.profile_image"),
          size: Settings.image.avatar_size %>
        <br>
        <%= @user.user_name %>
      </h1>
      <p  class="text-center text-info"><%= @user.email %></p>
      <div class="btn-centery">
        <%= link_to t("show.edit_profile"), edit_user_path,
          class: "btn btn-success full-width-button" %>
      </div>
    </section>
  </aside>
  <div class="col-md-8">
    <ul class="nav nav-tabs nav-justified" role="tablist">
      <li class="nav-item">
        <%= link_to t("show.recent_view"), "#home_tab",
          class:"nav-link active", "data-toggle": "tab", "role": "tab" %>
      </li>
      <li class="nav-item">
        <%= link_to t("user_profile.suggested_products"), "#suggesting_tab",
          class: "nav-link active", "data-toggle": "tab", "role": "tab" %>
      </li>
      <li class="nav-item">
        <%= link_to t("show.history_order"), "#orders_tab",
          class: "nav-link active", "data-toggle": "tab", "role": "tab" %>
      </li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane active" id="home_tab" role="tabpanel">
        <table class="table recenty-viewed">
          <thead>
            <tr>
              <th><%= t "product.product" %></th>
              <th><%= t "product.product_name" %></th>
              <th><%= t "product.description" %></th>
              <th><%= t "product.price" %></th>
            </tr>
          </thead>
          <tbody>
            <% @recently_viewed_products.each do |product| %>
              <%= render partial: "recently_viewed",
                locals: {product: product} %>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="tab-pane" id="orders_tab" role="tabpanel">
        <table class="table recenty-viewed">
          <thead>
            <tr>
              <th></th>
              <th><%= t "orders.product" %></th>
              <th><%= t "orders.total" %></th>
              <th><%= t "orders.status" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render @orders %>
          </tbody>
        </table>
      </div>
      <div class="tab-pane" id="suggesting_tab" role="tabpanel">
        <table class="table recenty-viewed">
          <thead>
            <tr>
              <th><%= t "suggesting.product" %></th>
              <th><%= t "suggesting.description" %></th>
              <th><%= t "suggesting.price" %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%= render current_user.suggestings %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
