<%= form_tag products_path, method: :get do %>
  <%= text_field_tag :product_name, params[:product_name],
    placeholder: "Product name",
    class: "search-query form-control" %>

  <%= select_tag :category_id,
    options_from_collection_for_select(@categories, :id,
    :category_name), class: "search-query form-control",
    include_blank: t("select_category") %>

  <%= number_field_tag :product_rating_point, params[:product_rating_point],
    placeholder: "Rating from", min: 1, max: 5,
    class: "search-query form-control" %>

  <%= number_field_tag :product_price_from, params[:product_price_from],
    placeholder: "Price from", min: 5000, step: 1000,
    class: "search-query form-control" %>

  <%= number_field_tag :product_price_to, params[:product_price_to],
    placeholder: "Price to", max: 1000000, step: 1000,
    class: "search-query form-control" %>

    <%= submit_tag 'Search', name: nil, class: "btn btn-info" %>
  <% end %>
